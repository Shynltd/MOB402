<form method="post" action="/hospital/create" class="container">
    <div class="form-group">
        <label for="formGroupExampleInput">Hospital name</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="name" placeholder="Hospital name">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Logo</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" name="logo" placeholder="Logo">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Address</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" name="address" placeholder="Address">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Bed number</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" name="bed_number" placeholder="Bed number">
