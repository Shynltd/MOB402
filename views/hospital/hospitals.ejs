<% include ../menu/menu %>
<body>
<div class="container-fluid">
    <header class="container">
    </header>
    <main class="container">
        <h4>Danh sách bệnh viện</h4>
        <table class="table table-striped">
            <thead>
            <th>Tên Bệnh viện</th>
            <th>Địa chỉ</th>
            <th>Logo</th>
            <th>Số giường bệnh</th>
            <th>
                <a href="/hospital/create" class="btn btn-sm btn-success">Tạo mới</a>
            </th>
            </thead>
            <tbody>
            <% for (let i = 0; i < hospitals.length; i++){ %>
                <tr>
                    <td><%= hospitals[i].name %></td>
                    <td><%= hospitals[i].address %></td>
                    <td><img width="150px" src="<%= hospitals[i].logo %>" alt=""></td>
                    <td><%= hospitals[i].bed_number %></td>
                    <td>
                        <a href="/hospital/search/<%= hospitals[i].name %>" class="btn btn-sm btn-info">Chi tiết</a>
                        &nbsp;
                        <a href="/hospital/remove/<%= hospitals[i].id %>"
                           onclick="return confirm('Bạn có muốn xóa hãng xe này')" class="btn btn-danger btn-sm">Remove</a>
                        &nbsp;
                        <a href="/hospital/update/<%= hospitals[i].id %>" class="btn btn-sm btn-primary">Update</a>
                    </td>

                </tr>
            <% } %>
            </tbody>
        </table>
    </main>
</div>
</body>
