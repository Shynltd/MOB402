<% include ../menu/menu %>
<form method="post" action="/hospital/update/<%=hospital.id%>" class="container">
    <div class="form-group">
        <label for="formGroupExampleInput">Hospital name</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="name" value="<%= hospital.name%>">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Logo</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" name="logo" value="<%= hospital.logo%>">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Address</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" name="address" value="<%= hospital.address%>">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Bed number</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" name="bed_number" value="<%= hospital.bed_number%>">
    </div>
    <div class="text-center">
        <button class="btn-primary btn-sm" type="submit">Lưu</button>
        &nbsp;
        <a href="/hospital" class="btn-primary btn-sm">Hủy</a>
    </div>
</form>