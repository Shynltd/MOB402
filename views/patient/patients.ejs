<% include ../menu/menu %>
<nav class="container navbar navbar-light bg-light" style="margin: 10px auto">
    <a class="navbar-brand">Danh sách bệnh nhân</a>
    <a href="/patients/create" class="btn btn-sm btn-success">Tạo mới</a>
    <form class="form-inline" action="/patients/search">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" value="" name="s">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</nav>
<div class="container">
    <div class="card-group">
        <div class="card-columns">
            <% for (let i = 0; i < patients.length; i++) { %>
                <div class="card">
                    <div class="d-flex justify-content-center">
                        <img class="img-fluid" style="max-height: 165px" src="<%= patients[i].avatar %>" alt="Card image">
                    </div>

                    <div class="card-body" >
                        <h4 class="card-title"> <%= patients[i].name %> </h4>
                        <p class="card-text">Bệnh viện: <%= patients[i].hospital_name%></p>
                        <div class="d-flex justify-content-center">
                        <a href="#"
                           class="btn btn-primary align-content-center">Giường: <%= patients[i].bed %></a>
                            &nbsp;
                        <a href="/patients/update/<%= patients[i].id %>"
                           class="btn btn-success align-content-center">Update</a>
                            &nbsp;
                        <a href="/patients/remove/<%= patients[i].id %>"
                           class="btn btn-danger align-content-center" onclick="return confirm('Bạn có muốn xóa hãng xe này')">Remove</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
<nav aria-label="Page navigation example">
    <ul class="pagination container align-bottom float-right">
        <li class="page-item">
            <a class="page-link" href="/patients?page=1" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="page-item"><a class="page-link" href="/patients?page=1">1</a></li>
        <li class="page-item"><a class="page-link" href="/patients?page=2">2</a></li>
        <li class="page-item"><a class="page-link" href="/patients?page=3">3</a></li>
        <li class="page-item">
            <a class="page-link" href="/patients?page=3" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>

