<% include ../menu/menu %>
<form method="post" action="/patients/update/<%=patient.id%>" class="container">
    <div class="form-group">
        <label for="formGroupExampleInput">Name</label>
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Name" name="name"
               value="<%= patient.name %>">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Age</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Age" name="age" value="<%= patient.age %>">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Address</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Address" name="address" value="<%= patient.address %>">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Hospital Name</label>
        <select name="hospital_name" class="form-control">
            <% for (let i = 0; i < hospital.length; i++) { %>
                <option <% if (patient.hospital_name == hospital[i].name) { %> selected <%}%> value="<%= hospital[i].name %>"><%= hospital[i].name %></option>
            <% } %>
        </select>
    </div>


    <div class="form-group">
        <label for="formGroupExampleInput2">Bed</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Bed" name="bed" value="<%= patient.bed %>">
    </div>

    <!--    <div class="form-group" >-->
    <!--        <label for="exampleFormControlFile1">Image</label>-->
    <!--        <input type="file" name="avatar" class="form-control-file" id="exampleFormControlFile1">-->
    <!--    </div>-->
    <div class="form-group">
        <label for="formGroupExampleInput2">Avatar</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Image" name="avatar" value="<%= patient.avatar %>">
    </div>

    <button type="submit" class="btn-outline-primary">Update Patient</button>
</form>